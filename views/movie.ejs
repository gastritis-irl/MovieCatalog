<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie.title %></title>
    <link rel="stylesheet" href="/public/movie.css">
</head>
<body>
    <h1><%= movie.title %></h1>

    <div class="container">
        <img src="<%= movie.coverImage %>" alt="<%= movie.title %>">

        <p>Year: <%= movie.releaseYear %></p>
        <p>Genre: <%= movie.genre %></p>
        <p>Description: <%= movie.description %></p>

        <h2>Reviews</h2>
        <% reviews.forEach(review => { %>
            <div class="review">
                <p>Rating: <%= review.rating %></p>
                <p>Review: <%= review.review %></p>
            </div>
        <% }); %>

        <h2>Add Review</h2>
        <form id="submit-review-form">
            <input type="hidden" id="movie-id" name="movieId" value="<%= movie._id %>">

            <label for="rating">Rating (1-10):</label>
            <input type="number" id="rating" name="rating" min="1" max="10" required><br>

            <label for="review-text">Review:</label>
            <textarea id="review-text" name="review" required></textarea><br>

            <button type="submit">Submit Review</button>
        </form>
    </div>

    <script src="script.js"></script>
</body>
</html>
